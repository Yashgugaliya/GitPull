<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin5dp"
    app:cardCornerRadius="@dimen/margin5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/width8dp">
        </ImageView>
        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title"
                android:paddingStart="@dimen/width8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textAllCaps="true"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold"/>

            <TextView
                android:paddingStart="@dimen/width8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textSize="@dimen/text_14sp" />
            <TextView
                android:id="@+id/username"
                android:paddingStart="@dimen/width8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yash_gugaliya"
                android:textStyle="bold"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/width8dp"
                android:text="@string/created_date"
                android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:id="@+id/created_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/width8dp"
                        android:text=""
                        android:textSize="@dimen/text_14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingLeft="@dimen/width8dp"
                        android:text="@string/closed_date"
                        android:textSize="@dimen/text_14sp" />
                    <TextView
                        android:id="@+id/closed_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:paddingLeft="@dimen/width8dp"
                        android:text=""
                        android:textSize="@dimen/text_14sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>